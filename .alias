#import private ssh alias
. ~/.dotfiles/.ssh-paths

# Step back
alias ..='cd ..'

# quick paths
alias htdoc='cd /Applications/MAMP/htdocs'		# MAMP Path


## Commands ##

# Open specified files in Sublime Text
# "s ." will open the current directory in Sublime
alias s='open -a "Sublime Text"'
alias pygment='pygmentize -S default -f html > pygments.css'	# creates pygments css file for jekyll

# Color LS
colorflag="-G"
alias ls="command ls ${colorflag}"
alias lsa="command ls -a ${colorflag}" #list all files
alias l="ls -lF ${colorflag}" # all files, in long format
alias la="ls -laF ${colorflag}" # all files inc dotfiles, in long format
alias lsd='ls -lF ${colorflag} | grep "^d"' # only directories

# Colored up cat!
# You must install Pygments first - "sudo easy_install Pygments"
alias cat='pygmentize -O style=monokai -f console256 -g'

# Git
alias gs='git status'
alias ga='git add'
alias gaa='git add .'
alias gd='git diff'
alias gl='git pull'
alias gc='git commit -am' # requires you to type a commit message
alias gp='git push'