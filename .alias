# Get IP Address
alias IP='ifconfig | grep "inet " | grep -v 127.0.0.1 | cut -d\  -f2 | pbcopy | echo "IP address copied to clipboard."'

# Git
alias gs='git status'
alias ga='git add'
alias gaa='git add .'
alias gd='git diff'
alias gl='git pull'
alias gc='git commit -am' # requires you to type a commit message
alias gp='git push'
alias gr='git rebase'
alias grc='git rebase --continue'
alias glg='git log --graph --oneline --all --decorate'
alias gck='git checkout'

# removes all changes made, including untracked files
alias gdrop='git stash -u && git stash drop'
# rollback by one commit
alias rollback='git reset --hard HEAD~1'

#osx
alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'
